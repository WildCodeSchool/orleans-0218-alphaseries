{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-pr-3">
                <img class="logoalpha" src="/assets/images/ecran_alpha.png" alt="logo alpha séries">
            </div>
            <div class="col-sm-8 offset-sm-2 col-md-8 offset-md-2">
                <i class="fas fa-quote-left fa-pull-left fa-border fa-2x"></i>
                <p class="lead mb-0 catchphrase-lineheight"> AlphaSeries : gérer vos séries n'a jamais été aussi facile !</p>
            </div>
        </div>
    </div>
    <div class="container ">
        <div class="row">
            <div class="col-7 mx-auto">
                <form method="GET" action ="/searchResult" class="input-group">
                    <input class="form-control searchengine" type="search" name="search" value="" placeholder="Votre recherche">
                </form>
            </div>
        </div>
    </div>
    <h1 class="new-series-title text-center pb-5 mt-5">Mes trois dernières séries ajoutées</h1>
    <div class="row pt-5">
        {% for serie in series %}
            <div class="col-md-3 col-sm-6 pl-4 pb-5 mx-auto">
                <figure class="card card-body mx-auto">
                    <h2 class="card-title text-center">{{ serie.title | title }}</h2>
                    {% if serie.link_picture is null %}
                        <img class="img-fluid mx-auto" src="/assets/upload/defaultPicture.jpg">
                    {% else %}
                        <img class="img-fluid mx-auto" src="/assets/upload/{{ serie.link_picture }}">
                    {% endif %}
                </figure>
            </div>
        {% endfor %}
    </div>
{% endblock %}



