{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="new-series-title text-center">Mes trois dernières séries ajoutées</h1>
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    {% for serie in series|slice(0, 3) %}
                        <div class="col-sm-4 ">
                            <div class="box text-center">
                                <h4 height="30px">{{ serie.title | title }}</h4>
                                <p><img class="img-fluid" src="http://via.placeholder.com/200x300" alt="/"></p>
                                <h5>{{ serie.genre }}</h5>

                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock content %}