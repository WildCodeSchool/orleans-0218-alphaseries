{% extends 'layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-8 offset-sm-2 col-md-8 offset-md-2">
            <i class="fas fa-quote-left fa-pull-left fa-border fa-2x"></i>
            <p class="lead mb-0 catchphrase-lineheight">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
        </div>
    </div>

    <h1 class="new-series-title text-center pb-5">Mes trois dernières séries ajoutées</h1>
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    {% for serie in series|slice(0, 3) %}
                        <div class="col-sm-6 col-md-4 box">
                            <p class="text-center mb-1">
                                <img class="img-fluid"
                                     src="http://via.placeholder.com/200x300"
                                     alt="/"
                                />
                            </p>
                            <div>
                                <h4 class="mx-auto" height="30px">{{ serie.title | title }}</h4>
                                <h5 class="pb-5 mx-auto">{{ serie.creation_date|date("Y")}}</h5>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
{% endblock content %}
