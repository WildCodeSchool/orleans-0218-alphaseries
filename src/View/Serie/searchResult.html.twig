{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="mt-5 pt-5">Resultat de votre recherche</h1>
    <div class="container ">
        <div class="row">
            <div class="col-7 p-3 mx-auto">
                <form method="GET" action ="" class="input-group">
                    <input class="form-control searchengine" type="search" name="search" value="" placeholder="Votre recherche">
                </form>
            </div>
        </div>
    </div>
    <div class="row pt-5">
        {% for serie in series %}
            <div class="col-md-3 col-sm-6 pl-4 pb-5">
                <figure class="card card-body mx-auto">
                    <figcaption><a href="/pageSerie/{{ serie.id }}"><h2 class="card-title text-center">{{ serie.title | title }}</h2></a></figcaption>
                    {% if serie.link_picture is null %}
                        <div class="stylecard">
                            <a class="linkcard" href="/pageSerie/{{ serie.id }}"><img class="img-fluid" src="assets/upload/defaultPicture.png"/></a>
                        </div>
                    {% else %}
                        <div class="stylecard">
                            <a class="linkcard" href="/pageSerie/{{ serie.id }}"><img class="img-fluid" src="assets/upload/{{ serie.link_picture }}"/></a>
                        </div>
                    {% endif %}
                </figure>
            </div>
        {% endfor %}
    </div>
{% endblock content %}